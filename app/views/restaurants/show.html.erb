
<div class="container shadow-sm p-3 mb-5 mt-5 bg-white rounded">
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h1><%= @restaurant.name %></h1>
    <hr>
    <p><strong>Address:</strong> <%= @restaurant.address %> </p>
    <hr>
    <p> <strong>Phone:</strong> <%= @restaurant.phone_number %> </p>
    <hr>
    <p> <strong>Category:</strong> <%= @restaurant.category %> </p>
    <hr>
    <p><strong>Reviews:</strong></p>
    <% @reviews.each do |review| %>
      <li> "<%= review.content %>" | <%= review.rating %></li>
    <% end %>
    <br><br>
    <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-info mt-3" %>
    <%= link_to "home", restaurants_path, class: "btn btn-success mt-3"%>
  </div>
</div>
</div>