<div class="container shadow-sm p-3 mb-5 mt-5 bg-white rounded">

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit", class: "btn btn-info" %>
  <%= link_to "home", restaurants_path, class: "btn btn-success"%>
<% end %>



</div>